{% extends "base.html.twig" %}

{% block body %}

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h3 class="mt-5 mb-5">Edit Form</h3>
      <form method="post">
        <div class="form-group">
          {{ form_label(form.firstname, null, {'label_attr': {'class': 'control-label'}}) }}
          {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.lastname, null, {'label_attr': {'class': 'control-label'}}) }}
          {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
          {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'email'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.active, null, {'label_attr': {'class': 'control-label'}}) }}
          {{ form_widget(form.active, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.jobid, null, {'label_attr': {'class': 'control-label'}}) }}
          {{ form_widget(form.jobid, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.countryid, null, {'label_attr': {'class': 'control-label'}}) }}
          {{ form_widget(form.countryid, {'attr': {'class': 'form-control'}}) }}
        </div>
        <br>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="{{ path('app_person') }}" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
